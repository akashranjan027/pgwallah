# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://auth_user:auth_password@postgres-auth:5432/auth_db

# Redis
REDIS_URL=redis://:redis_password@redis:6379/0

# JWT Settings
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Server
HOST=0.0.0.0
PORT=8010
RELOAD=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:8000"]

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Testing
TESTING=false
TEST_DATABASE_URL=postgresql://auth_user:auth_password@postgres-auth:5432/auth_test_db